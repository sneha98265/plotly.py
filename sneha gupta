# Python code to generate a pie chart
import matplotlib.pyplot as plt

# Data
labels = ['Invoice Matching', 'Reconciliation of Tax Data', 'Frequent Changes in Rules', 'Classification of Goods']
sizes = [40, 30, 20, 10]
colors = ['#ff9999','#66b3ff','#99ff99','#ffcc99']
explode = (0.1, 0, 0, 0)  

# Plot
plt.pie(sizes, explode=explode, labels=labels, colors=colors, autopct='%1.1f%%', startangle=140)
plt.title('Most Challenging Aspects of GST Compliance')
plt.axis('equal')  
plt.show()

